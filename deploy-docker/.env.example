# Database URLs
DATABASE_URL=postgresql://user:password@postgres:5432/tradingbot
POSTGRES_URL=postgresql://user:password@postgres:5432/tradingbot
MONGODB_URL=mongodb://mongodb:27017/tradingbot

# JWT Settings
JWT_SECRET=your-secret-key-here
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_SECRET_KEY=your-jwt-secret-key-here

# Trading Wallet Settings
TRADING_WALLET_ADDRESS=
TRADING_WALLET_PRIVATE_KEY=

# DeepSeek API Settings
DEEPSEEK_API_KEY=your-deepseek-api-key-here
DEEPSEEK_MODEL=deepseek-v3
DEEPSEEK_MODEL_R1=deepseek-r1
DEEPSEEK_API_URL=https://api.deepseek.com/v3/completions
DEEPSEEK_MIN_CONFIDENCE=0.7
DEEPSEEK_TEMPERATURE=0.7
DEEPSEEK_MAX_RETRIES=3
DEEPSEEK_RETRY_DELAY=2.0

# Service Ports
API_PORT=8000
FRONTEND_PORT=3000
MONGODB_PORT=27017
POSTGRES_PORT=5432

# PostgreSQL Settings
POSTGRES_USER=user
POSTGRES_PASSWORD=password
POSTGRES_DB=tradingbot

# Redis Settings
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0

# Logging Settings
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Monitoring Settings
PROMETHEUS_ENABLED=true
GRAFANA_ENABLED=true
