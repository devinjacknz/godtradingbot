# 应用配置
APP_NAME=tradingbot
APP_ENV=development
DEBUG=true
LOG_LEVEL=DEBUG
TIMEZONE=Asia/Shanghai

# 服务端口
API_PORT=8000
TRADING_PORT=8001
FRONTEND_PORT=3000
WEBSOCKET_PORT=8002
GRPC_PORT=8003

# 数据库配置
MONGODB_URI=mongodb://localhost:27017/tradingbot
MONGODB_MAX_POOL_SIZE=100
MONGODB_MIN_POOL_SIZE=10
MONGODB_MAX_IDLE_TIME=60000

POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=tradingbot
POSTGRES_USER=admin
POSTGRES_PASSWORD=tradingbot_local_dev
POSTGRES_SSL_MODE=disable
POSTGRES_MAX_CONNECTIONS=100

REDIS_URI=redis://localhost:6379/0
REDIS_MAX_CONNECTIONS=100
REDIS_MIN_IDLE_CONNS=10
REDIS_POOL_SIZE=100
REDIS_POOL_TIMEOUT=30

# 模型配置
MODEL_PROVIDER=ollama
MODEL_NAME=deepseek
MODEL_VERSION=r1-1.5b
MODEL_MAX_TOKENS=2048
MODEL_TEMPERATURE=0.7
MODEL_TOP_P=0.9
MODEL_FREQUENCY_PENALTY=0
MODEL_PRESENCE_PENALTY=0

# JWT配置
JWT_SECRET=local_dev_secret_key_do_not_use_in_production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# 交易配置
TRADING_MODE=testnet
MAX_POSITION_SIZE=1000
RISK_LEVEL=medium
STOP_LOSS_PERCENTAGE=2.0
TAKE_PROFIT_PERCENTAGE=5.0
MAX_LEVERAGE=10
MIN_ORDER_SIZE=0.01
MAX_ORDER_SIZE=100
ORDER_TIMEOUT_SECONDS=30
MAX_SLIPPAGE_PERCENT=1.0
LIQUIDATION_THRESHOLD=80

# DEX配置
JUPITER_API_URL=https://quote-api.jup.ag/v6
JUPITER_MAX_ROUTES=3
JUPITER_SLIPPAGE_BPS=50

RAYDIUM_API_URL=https://api.raydium.io/v2
RAYDIUM_MAX_ROUTES=3
RAYDIUM_SLIPPAGE_BPS=50

ORCA_API_URL=https://api.orca.so
ORCA_MAX_ROUTES=3
ORCA_SLIPPAGE_BPS=50

# 区块链配置
SOLANA_RPC_URL=https://api.testnet.solana.com
SOLANA_WS_URL=wss://api.testnet.solana.com
SOLANA_COMMITMENT=confirmed
SOLANA_PREFLIGHT_COMMITMENT=processed
SOLANA_TIMEOUT=30000

# 监控配置
PROMETHEUS_PORT=9090
PROMETHEUS_RETENTION_DAYS=15
PROMETHEUS_STORAGE_PATH=./data/prometheus

GRAFANA_PORT=3001
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin

ENABLE_METRICS=true
METRICS_INTERVAL=15
METRICS_RETENTION_DAYS=30

# 日志配置
LOG_FORMAT=json
LOG_OUTPUT=console
LOG_FILE_PATH=./logs
LOG_MAX_SIZE=100
LOG_MAX_BACKUPS=3
LOG_MAX_AGE=7
LOG_COMPRESS=false

# 安全配置
CORS_ORIGINS=http://localhost:3000,http://localhost:3001
RATE_LIMIT=100
RATE_LIMIT_PERIOD=60
MAX_REQUEST_SIZE=10mb
ENABLE_SSL=false
SSL_CERT_PATH=./certs/tradingbot.crt
SSL_KEY_PATH=./certs/tradingbot.key

# 缓存配置
CACHE_TTL=3600
CACHE_MAX_SIZE=1000
CACHE_CLEANUP_INTERVAL=600

# 性能配置
MAX_WORKERS=10
QUEUE_SIZE=1000
BATCH_SIZE=100
FLUSH_INTERVAL=5000
TIMEOUT=30000

# 告警配置
ALERT_EMAIL=admin@example.com
ALERT_SLACK_WEBHOOK=https://hooks.slack.com/services/xxx
ALERT_TELEGRAM_BOT_TOKEN=your-bot-token
ALERT_TELEGRAM_CHAT_ID=your-chat-id

# 备份配置
BACKUP_ENABLED=true
BACKUP_INTERVAL=86400
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=./data/backups
BACKUP_COMPRESS=true

# 调试配置
DEBUG_METRICS_ENABLED=true
DEBUG_PROFILING_ENABLED=true
DEBUG_TRACE_ENABLED=true
DEBUG_PPROF_PORT=6060
