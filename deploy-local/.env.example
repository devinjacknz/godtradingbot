# Environment settings
ENV=development
DEBUG=true
APP_NAME=TradingBot
APP_VERSION=1.0.0
SECRET_KEY=your-super-secret-key

# Database settings
MONGODB_URI=mongodb://localhost:27017
MONGODB_DATABASE=tradingbot
MONGODB_COLLECTION_PREFIX=dev_
USE_REDIS=true
REDIS_URL=redis://localhost

# DeepSeek API Settings
DEEPSEEK_API_KEY=your-deepseek-api-key-here
DEEPSEEK_MODEL=deepseek-v3
DEEPSEEK_API_URL=https://api.deepseek.com/v3/completions
DEEPSEEK_TEMPERATURE=0.7

# Exchange API settings
BINANCE_API_KEY=your-binance-api-key
BINANCE_API_SECRET=your-binance-api-secret
BINANCE_TESTNET=true

OKEX_API_KEY=your-okex-api-key
OKEX_API_SECRET=your-okex-api-secret
OKEX_TESTNET=true
OKEX_PASSPHRASE=your-okex-passphrase

# News and Social Media settings
NEWS_API_KEY=your-news-api-key
TWITTER_API_KEY=your-twitter-api-key
REDDIT_API_KEY=your-reddit-api-key

# Trading settings
TRADING_MODE=spot
TRADING_ENABLED=true
PAPER_TRADING=true
TRADING_PAIRS=BTC/USDT,ETH/USDT
RISK_LEVEL=medium
MAX_LOSS_PERCENTAGE=2.0
POSITION_SIZE_PERCENTAGE=10.0
MAX_EXPOSURE_PERCENTAGE=50.0

# Monitoring settings
USE_PROMETHEUS=true
PROMETHEUS_PUSHGATEWAY=localhost:9091
METRICS_PREFIX=tradingbot

# Alert settings
ALERT_CHANNELS=email,slack
MIN_ALERT_LEVEL=warning
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-email-password
ALERT_EMAIL_TO=alerts@example.com

# Optional alert channels
SLACK_WEBHOOK_URL=your-slack-webhook-url
SLACK_CHANNEL=#trading-alerts

TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_CHAT_ID=your-telegram-chat-id

DISCORD_WEBHOOK_URL=your-discord-webhook-url

# Performance settings
MAX_WORKERS=4
BATCH_SIZE=100
REQUEST_TIMEOUT=30

# Logging settings
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
